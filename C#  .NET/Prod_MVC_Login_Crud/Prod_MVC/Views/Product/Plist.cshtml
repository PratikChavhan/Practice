@using BOL;
@{
    ViewData["Title"] = "Products List";
}
<div>
    <div>
        <span style="margin-left: 90%;">
        <a href="/Product/Add">
            <button style="background-color: rgb(3, 171, 106); color: white; border-radius: 10%; box-shadow: inset;">ADD</button>
        </a>
        </span>
        <table style="width: 80%;">
            <thead>
                <tr>
                    <th>
                        <h4>Product_ID</h4>
                    </th>
                    <th>
                        <h4>Product_Name</h4>
                    </th>
                    <th>
                        <h4 class="text-center">Product_UnitPrice</h4>
                    </th>
                    <th>
                        <h4 class="text-center">Supplier_ID</h4>
                    </th>
                    <th>
                        <h4 class="text-center">Actions</h4>
                    </th>
                </tr>
            </thead>

            <tbody>
                @{
                    List<Product> pl = (List<Product>)ViewData["plist"];
                    foreach (Product p in pl)
                    {
                        <tr>
                            <td>@p.pid</td>
                            <td>@p.pname</td>
                            <td class="text-center">@p.uprice</td>
                            <td class="text-center">@p.splid</td>
                            <td class="text-center"> <a href="Edit/@p.pid" name="pid" value="@p.pid">Edit</a> / <a href="Delete/@p.pid"
                                    name="delete" value="@p.pid">Delete</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>